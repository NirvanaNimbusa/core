{
    "name": "caffeina-core/core",
    "type": "library",
    "description": "Platform for rapid application development.",
    "keywords": ["framework","core","sdk","platform"],
    "homepage": "http://caffeina.com",
    "license": "MIT",
    "authors": [
        {
            "name": "Stefano Azzolini",
            "email": "stefano.azzolini@caffeina.com"
        },
        {
            "name": "Gabriele Diener",
            "email": "gabriele.diener@caffeina.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=5.6"
    },
    "require-dev": {
        "kherge/box": "*",
        "phpunit/phpunit": "^5",
        "phpunit/php-invoker": "*",
        "phpstan/phpstan": "^0.6.3"
    },
    "scripts": {
    	  "test" : [
          "vendor/bin/phpstan analyse --no-ansi -n -c phpstan.neon -l 5 classes",
          "vendor/bin/phpunit --colors=never"
        ],
        "build" : "php -d phar.readonly=0 vendor/bin/box build"
    },
    "config": {
        "optimize-autoloader": true
    },
    "autoload": {
        "classmap": [ "classes/" ]
    },
    "autoload-dev": {
        "classmap": [ "classes/", "tests/" ]
    }
}
