{
    "name": "caffeina-core/core",
    "type": "library",
    "description": "Platform for rapid application development.",
    "keywords": ["framework","core","sdk","platform","toolkit","caffeina"],
    "homepage": "http://caffeina.com",
    "license": "MIT",
    "authors": [
        {
            "name": "Stefano Azzolini",
            "email": "stefano.azzolini@caffeina.com"
        },
        {
            "name": "Gabriele Diener",
            "email": "gabriele.diener@caffeina.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=7.0"
    },
    "require-dev": {
        "kherge/box": "*",
        "phpunit/phpunit": "^5",
        "phpunit/php-invoker": "*",
        "phpstan/phpstan": "^0.6.3"
    },
    "scripts": {
    	  "test" : [
          "vendor/bin/phpunit --colors=always -c phpunit.xml --bootstrap tests/test-boot.php tests/cases"
        ],
        "build" : "php -d phar.readonly=0 vendor/bin/box build"
    },
    "config": {
        "optimize-autoloader": true
    },
    "autoload": {
         "psr-4": {
            "Core\\": "src/Core/"
          },
          "files": [
            "boot.php"
          ]
    },
    "autoload-dev": {
        "psr-4": {
          "Core\\": "src/Core/"
        },
        "files": [
          "boot.php"
        ],
        "classmap": [ "tests/" ]
    }
}
