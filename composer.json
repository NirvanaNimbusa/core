{
    "name": "caffeina-core/core",
    "type": "library",
    "description": "Toolset for rapid application development.",
    "keywords": [
      "framework",
      "core",
      "sdk",
      "platform",
      "toolkit",
      "caffeina"
    ],
    "homepage": "http://caffeina.com",
    "license": "MIT",
    "authors": [
        {
            "name": "Stefano Azzolini",
            "email": "stefano.azzolini@caffeina.com"
        },
        {
            "name": "Gabriele Diener",
            "email": "gabriele.diener@caffeina.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^5",
        "phpstan/phpstan": "^0.6.3"
    },
    "scripts": {
        "test" : [
          "vendor/bin/phpstan analyse --ansi -n -c tests/phpstan.neon -l 5 src",
          "vendor/bin/phpunit --colors=always -c tests/phpunit.xml tests/cases"
        ],
        "changelog" : "docs/changelog --skip-head > CHANGELOG.md"
    },
    "config": {
        "optimize-autoloader": true
    },
    "autoload": {
         "psr-4": {
            "Core\\": "src/Core/"
          }
    }
}
